<h1>Add a new Category</h1>
  <%= form_for(@category, url: category_path, html: {class: "form-horizontal"}) do |f| %>

    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name , class: 'form-control' %>
    </div>

  <div class="form-group ">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
  <% end %>