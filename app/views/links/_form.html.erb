<%= form_for([@current_user, @current_user.links.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :link %><br>
    <%= f.text_area :link %>
  </p>
  <p>
    <%= f.label :category %><br>
    <%= f.text_area :category %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
